[Unit]
Description="UoN RobotX Autopilot service"
Wants=network.target
After=network.target
RequiresMountsFor=/home/robotx

[Service]
Type=simple
Restart=always
WorkingDirectory=/home/robotx/Autopilot/build
User=robotx
Environment=HOME="/home/robotx/"
PassEnvironment=HOME
ExecStart=/home/robotx/Autopilot/build/bin/remote_control

[Install]
WantedBy=multi-user.target
EOF

# Enable autostarting of the service
systemctl enable autopilot.service
